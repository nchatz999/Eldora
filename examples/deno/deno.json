{
  "tasks": {
    "start": "deno check ./src/**/*.ts & deno run -A ./build.ts & deno run -A  ./server.ts"
  },

  "fmt": {
    "files": {
      "include": ["src/"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 4,
      "singleQuote": true
    }
  },

  "lint": {
    "files": {
      "include": ["src/"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "compilerOptions": {
    "lib": ["dom", "deno.ns"],
    "jsx": "react-jsx",
    "jsxImportSource": "@nchatz999/eldora",
    "strict": true
  },
  "imports": {
    "@nchatz999/eldora": "jsr:@nchatz999/eldora@^0.1.26"
  }
}
